{% extends 'base.html.twig' %}

{% block title %}Compositeur{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="{{ path('app_composers_show') }}">liste des compositeurs</a>
    <h1>{{ composer.getName() }}</h1>
    <p>{{ composer.getDescription() }}</p>
    <p>Masterclass du compositeur :</p>
    <ul>
        {% for masterclas in masterclass %}
            <li>
                <a href="{{ path('app_masterclass_show', {'id':masterclas.id}) }}">{{masterclas.getTitle()}}</a>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
