{% extends 'base.html.twig' %}

{% block title %}MASTERCLASS{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="{{ path('app_masterclass_list_show') }}">liste des masterclass</a>
    <h1>{{ masterclass.getTitle() }}</h1>

    <a href="{{ path('funfact_new', {'id':masterclass.id}) }}">Ajouter une funfact</a>
    {% if masterclass.getFunfact() %}
    <h3>{{ masterclass.getFunfact().getName() }}</h3>
    <p>{{ masterclass.getFunfact().getDescription() }}</p>
    {% endif %}
</div>
{% endblock %}
