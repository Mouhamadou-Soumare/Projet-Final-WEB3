{% extends 'base.html.twig' %}

{% block title %}Masterclass{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Nos Masterclass</h1>

    <ul>
        {% for masterclass in masterclasss %}
            <li>
                <a href="{{ path('app_masterclass_show', {'id':masterclass.id}) }}">{{masterclass.getTitle()}}</a>
            </li>
        {% endfor %}
    </ul>
    <a href="{{ path('app_create_masterclass') }}">ajouter un masterclass</a>
</div>
{% endblock %}
